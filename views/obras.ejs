<%- include('partials/obrasHead') %>
<body>
    <%- include('partials/header') %>

    <section id="obras">
        <div class="obras__grid">
            <%obras.forEach(obra => { %>   <!-- %%%%%%% OBRA.FOREACH -->
                <div class="obra__box" data-aos="fade-up">
                        <img src="<%=obra.imgUrl%>" alt="<%=obra.titulo%>">
                        <span class="toggle-overlay"></span>
                        <div class="obra__overlay">
                            <div class="obra__overlay--inner">
                                <h1><%=obra.titulo%></h1>
                                <h2><%=obra.resumen%></h2>
                                <p><%=obra.fecha.toLocaleDateString("de-DE")%></p>
                            </div>
                        </div>
                </div>
            <%})%>
        </div>
    </section>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="/js/obraScript.js"></script>
</body>
</html>