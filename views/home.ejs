<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&family=PT+Serif:wght@700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/6a6f348080.js" crossorigin="anonymous"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/utilityClasses.css" />
    <link rel="stylesheet" href="/css/homeStyles.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Strumel</title>
  </head>
  <body>

    <!-- %%%%%%%%%%%%%%% NAV %%%%%%%%%%%%%%%%%% -->

    <nav id="nav">
      <ul class="nav__list">
        <li class="nav__btn"><span class="nav__burger"></span></li>
        
        <li class="nav__item">
          <a href="#hero" name="hero" class="nav__link">Empresa</a>
          <a href="#hero"><i class="fas fa-home"></i></a>
        </li>

        <li class="nav__item">
          
          <a href="#habilidades-calculador" name="habilidades-calculador" class="nav__link">Caclculador de precio</a>
          <a href="#habilidades-calculador"
            ><i class="fas fa-calculator"></i
          ></a>
        </li>

        <li class="nav__item">
          <a href="#obras" name="obras" class="nav__link">Galería</a>
          <a href="#obras"><i class="fas fa-th"></i></a>
        </li>

        <li class="nav__item">
          <a href="#contacto" name="contacto" class="nav__link">Contacto</a>
          <a href="#contacto"><i class="fas fa-phone-square"></i></a>
        </li>
      </span>

        
      </ul>
    </nav>

<!-- %%%%%%%%%%%%%%% HEADER %%%%%%%%%%%%%%%%%% -->
<header class="header">
  <div class="header__title">
    <h2 class="title">Strumel</h2>
  </div>
  <div class="header__contact">
    <i class="fas fa-phone"></i><h2 class="telefono"><a href="tel:+34634549959">618919454</a></h2>
  </div>
  
</header>

<!-- %%%%%%%%%%%%%%% HERO %%%%%%%%%%%%%%%%%% -->
    
<section id="hero" class="full-viewport">
  <div id="particles-js"></div>
   <!-- / IMG OBRA (DE FONDO) / -->

      <div class="hero__bg-img">
        <img src="/css/images/obraBg3.png" alt="" />
      </div>

    

      <div class="container">
          <!-- / LOGO / -->
           
          <div class="logo__title">
        <img src="css/svg/haz.svg" />

          <!-- / TITULO / -->
          <h1 class="title">Strumel</h1>
        </div>

        <!-- / PRESENTACIÓN--ANIMACIÓN
              (LETRAS QUE SE MUEVEN)  /-->

        <div class="presentation">
          <h1 class="presentation__title">30 años </h1>
          <a href="" class="typewrite" data-period="2000" data-type='[ "construyendo", "reformando", "arreglando", "cumpliendo tus sueños"]'>
            <span class="wrap"></span>
          </a>
        </div>

     
      </div>
    </section>


<!-- %%%%%%%%%%%%%%%/ HABILIDADES-CALCULATOR /%%%%%%%%%%%%%%%%%% -->

    <section id="habilidades-calculador">
      <div class="container calculator-flex">

        
         <!-- / HABILIDADES / -->
         
        <div class="habilidades" data-aos="fade-right">

          <div>
            <div class="slide-set slide-set-1">
              <div class="hab-item">
                <i class="fas fa-tools"></i><h3 class="hab-title">Reformas</h3>
              </div>
              <div class="hab-item">
                <i class="fas fa-house-damage"></i><h3 class="hab-title">Reparaciones</h3>
              </div>
            
            </div>
            <div class="slide-set slide-set-2">
              <div class="hab-item">
                <i class="fas fa-paint-roller"></i><h3 class="hab-title">Pintura</h3>
              </div>
              <div class="hab-item">
                <i class="fas fa-faucet"></i><h3 class="hab-title">Fontanería</h3>
              </div>
            </div>
            <div class="slide-set slide-set-3">
              <div class="hab-item">
                <i class="fas fa-building"></i><h3 class="hab-title">Obra nueva</h3>
              </div>
            
              <div class="hab-item">
                <i class="fas fa-check"></i>
                <div class="hab-title">
                  <h3 >+30 años</h3>
                  <h5 >de experiencia</h5>
                </div>
              </div>
            </div>
          </div>

        </div>


           <!-- / CALCULADORA / --> 

        <div class="calculadora" data-aos="fade-left" data-aos-delay="300">
          
         <form class=form_calculator>
           <div class="calculadorita">

               <hr>
                 <div class="primer">

                <label for="vivienda">Tipo De Vivienda</label>
                 <select id="vivienda">

                 <option value="grande">Grande</option>
                 <option value="pequeña">Pequeña</option>
                 <option value="mediana">Mediana</option>
                
                 </select>
                </div>
                 
           
                <div class="segundo">
                 <label for="servicio">Tipo De Servicio</label>
                 <select id="servicio">
               
                 <option value="reformas">Reformas</option>
                 <option value="pintura">Pintura</option>
                 <option value="obra-nueva">Obra Nueva</option>
                 <option value="reparación">Reparación</option>
                 <option value="fontanería">Fontanería</option>
                 </select>
                </div>
                
                 

               
                     <!-- range slide -->
                  <div class="tercero">
               <label for="metros">Metros</label>           
              <input type="range" id="metros" min="0" max="500">
            </div>
            <hr>
              

       
           </div>
           </form>
          


       
        </div>
      </div>

    </section>



    <!-- %%%%%%%%%%%%%% GALERIA %%%%%%%%%%%%%%%%%%% -->
  
    <section id="obras">
      <div class="wave-svg">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
        </svg>
    </div>
      <div class="container">
        <div id="gallery" data-aos="fade-up">
          <div class="gallery">
            <% obras.forEach((obra, i) => { %>
               <%if(i === 0){%>          <!--  principio if -->
                <figure class="on">
              <%}else{%>
                <figure>
              <%}%>                       <!--  final if -->
                <img src="<%= obra.imgUrl %>"/>
                <div>
                  <h2><%= obra.titulo %></h2>
                  <%if(i === 0){%>                                                                <!--  principio if -->
                    <p class="gallery__descript gallery__descript--grow"><%= obra.resumen %></p>
                  <%}else{%>
                    <p class="gallery__descript"><%= obra.resumen %></p>
                  <%}%>                                                                            <!--  principio if -->
                  
                  
                  <p class="gallery__btn"><a href="/obras/:<%= obra._id %>">Saber más</a></p>
                  
                </div>
              </figure>
              
            <% }); %>
        

          </div>
        </div>
      </div>
    </section>
    <section id="contacto">

      <div class="container">
        <div class="contact__methods">

          <div class="contact__item">
            <i class="fas fa-envelope"></i><h2><a href="mailto:dario@meliabasus.com">dario@meliabasus.com</a></h2>
          </div>

          <div class="contact__item">
            <i class="fas fa-phone"></i><h2><a href="tel:+3466666666">618919454</a></h2>
          </div>

        </div>
      </div>
      
    </section>

    <script src="js/particles/particles.js"></script>
    <script src="js/particles/particlesConfig.js"></script>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="/js/homeScript.js"></script>
    
  </body>
</html>
