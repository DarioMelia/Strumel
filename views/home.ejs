                <input type="checkbox" id="suelos-baño" class="calc__checkbox" name="lista-bano" value="suelos">
              </div>
              <div class="calc__input">
                <label for="paredes-baño">Paredes</label>
                <input type="checkbox" id="paredes-baño" class="calc__checkbox" name="lista-bano" value="paredes">
              </div>
              <div class="calc__input">
                <label for="techos-baño">Techos</label>
                <input type="checkbox" id="techos-baño" class="calc__checkbox" name="lista-bano" value="techos">
              </div>
          
            </div>

            <div class="calc__tab tab--cocina">
              <div class="calc__input">
                <label for="mobiliario">Mobiliario</label>
                <input type="checkbox" id="mobiliario" class="calc__checkbox" name="lista-cocina" value="mobiliario">
              </div>
              <div class="calc__input">
                <label for="unir-cocina-y-salón">Unir cocina y salón</label>
                <input type="checkbox" id="unir-cocina-y-salón" class="calc__checkbox" name="lista-cocina" value="unir-cocina-y-salón">
              </div>
              <div class="calc__input">
                <label for="isla-central">Isla central</label>
                <input type="checkbox" id="isla-central" class="calc__checkbox" name="lista-cocina" value="isla-central">
              </div>
              <div class="calc__input">
                <label for="suelos-cocina">Suelos</label>
                <input type="checkbox" id="suelos-cocina" class="calc__checkbox" name="lista-cocina" value="suelos-cocina">
              </div>
              <div class="calc__input">
                <label for="paredes-cocina">Paredes</label>
                <input type="checkbox" id="paredes-cocina" class="calc__checkbox" name="lista-cocina" value="paredes-cocina">
              </div>
              <div class="calc__input">
                <label for="techos-cocina">Techos</label>
                <input type="checkbox" id="techos-cocina" class="calc__checkbox" name="lista-cocina" value="techos-cocina">
