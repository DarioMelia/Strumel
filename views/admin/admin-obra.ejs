<%- include('../partials/adminHead') %>
<body>
  <div class="container">
    <div class="logo__title">
      <img src="/css/svg/logo-admin.svg">
        <h1 class="title">Strumel<span class="admin-subtitle">Admin</span></h1>
      </div>

      <div class="btns-edit">
        <button class="btn btn-primary btn-edit">Editar</button>
        <a href="/admin" class="btn btn-warning">Todas las Obras</a>
      </div>

      <div class="obra__container">
        <div class="admin-flex">
          <img class="obra__image" src="<%=obra.imgUrl%>" alt="<%=obra.titulo%>">
          <div class="obra__contenido">
            <h1><%=obra.titulo%></h1>
            <h4><%=obra.fecha.toLocaleDateString("de-DE")%></h4>
            <h5><%=obra.resumen%></h5>
            <p><%=obra.contenido%></p>
          </div>
        </div>
      </div>
  </div>

  <div class="edit__overlay">
    <div class="edit__overlay__inner">
      <button class="edit__overlay--close"><i class="far fa-times-circle"></i></button>
      <form action="/admin/update/<%=obra.id%>" method="POST">
        <div class="mb-3">
          <label class="form-label" for="titulo">Título</label>
          <input
            class="form-control"
            type="text"
            id="titulo"
            name="titulo"
            placeholder="Título"
            value="<%=obra.titulo%>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="resumen">Resumen</label>
          <textarea
            class="form-control"
            id="resumen"
            name="resumen"
            rows="2"
            placeholder="Resumen..."
            
          ><%=obra.resumen%></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label" for="contenido">Contenido</label>
          <textarea
            class="form-control"
            id="contenido"
            name="contenido"
            rows="3"
            placeholder="Contenido..."
            
          ><%=obra.contenido%></textarea>
        </div>
       
        <div class="mb-3">
          <label class="form-label" for="imgUrl">Url de la imagen</label>
          <input
            class="form-control"
            id="imgUrl"
            type="text"
            name="imgUrl"
            placeholder="Link a la imagen"
            value="<%=obra.imgUrl%>"
          />
        </div>
        <button class="btn btn-success"type="submit">Editar</button>
      </form>
    </div>
  </div>
    <script src="/js/adminObraScript.js"></script>
</body>
</html>