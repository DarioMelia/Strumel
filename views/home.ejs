              <div class="calc__input">
                <label for="paredes">Paredes</label>
                <input type="checkbox" id="paredes" class="calc__checkbox" name="lista-integral" value="paredes">
              </div>
              <div class="calc__input">
                <label for="techos">Techos</label>
                <input type="checkbox" id="techos" class="calc__checkbox" name="lista-integral" value="techos">
