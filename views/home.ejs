    <!-- %%%%%%%%%%%%%% GALERIA %%%%%%%%%%%%%%%%%%% -->
  
    <section id="obras">

      <div class="wave-svg">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
        </svg>
    </div>

      <div class="container">
        <span class="all-obras-link" data-aos="fade-up" data-aos-offset="200"><a href="/obras">Todas las obras</a></span>
        <div id="gallery" data-aos="fade-up" data-aos-offset="200">
          <div class="gallery">
            <% obras.forEach((obra, i) => { %>
               <%if(i === 0){%>          <!--  principio if -->
                <figure class="on">
              <%}else{%>
                <figure>
              <%}%>                       <!--  final if -->
                <img src="data:image/<%=obra.img.contentType%>;base64,
                <%=obra.img.data.toString('base64')%>" alt="<%= obra.resumen %>"/>
                <div>
                  <h2><%= obra.titulo %></h2>
                  <% let resumen = obra.resumen %>
                  <%if(resumen.length > 80){resumen = obra.resumen.substring(0,80) + "..."}%>
                 
                  <%if(i === 0){%>                                                                <!--  principio if -->
                    <p class="gallery__descript gallery__descript--grow"><%= resumen %></p>
                  <%}else{%>

                    <p class="gallery__descript"><%= resumen %></p>
                  <%}%>                                                                      
                  <p class="gallery__btn"><button name="<%= i %>">Saber más</button></p>

                </div>
               
              </figure>

          
            <% }); %>
        

          </div>
        </div>
      </div>
      <!-- %%% OBRA OVERLAY %%% -->
        <% obras.forEach((obra, i)=> { %>
          <div class="obra-info">
            <div class="obra-info--inner">

              <button class="obra-info--close" name=<%= i %>>
                <i class="fas fa-times"></i>
              </button>
              <span class="obra-info__date"><%= obra.fecha.toLocaleDateString("de-DE") %></span>
             <div class="obra-info__img">
               <img src="data:image/<%=obra.img.contentType%>;base64,
               <%=obra.img.data.toString('base64')%>" alt="<%= obra.resumen %>">
               <button class="obra-info__expand-img-btn"><i class="fas fa-expand"></i></button>
              </div>
              <div class="contenido-scroll">
             <h3><%= obra.resumen %></h3>
             
               <p><%= obra.contenido %></p>
             </div>

           </div>
          </div>

        <% }) %>
         
        
    </section>


